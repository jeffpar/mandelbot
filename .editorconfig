# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{css,html,json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false
